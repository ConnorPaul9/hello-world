{
  "name": "hello-world",
  "description": "Nodejs test / demo server application",
  "version": "1.0.0",
  "author": "Gleb Bahmutov <gleb.bahmutov@gmail.com>",
  "bugs": "https://github.com/bahmutov/hello-world/issues",
  "config": {
    "pre-git": {
      "commit-msg": "simple",
      "pre-commit": [
        "npm test"
      ],
      "pre-push": [
        "npm run size"
      ],
      "post-commit": [],
      "post-merge": []
    }
  },
  "files": [
    "index.js"
  ],
  "homepage": "https://github.com/bahmutov/hello-world#readme",
  "keywords": [
    "demo",
    "hello",
    "node",
    "nodejs",
    "server"
  ],
  "license": "MIT",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git@github.com:bahmutov/hello-world.git"
  },
  "scripts": {
    "format": "standard-format -w index.js",
    "issues": "git-issues",
    "lint": "standard --verbose index.js",
    "pretest": "npm run format && npm run lint",
    "size": "t=\"$(npm pack .)\"; wc -c \"${t}\"; tar tvf \"${t}\"; rm \"${t}\";",
    "test": "npm run unit",
    "unit": "mocha index.js",
    "commit": "commit-wizard"
  },
  "devDependencies": {
    "git-issues": "1.2.0",
    "mocha": "2.4.5",
    "pre-git": "3.7.0",
    "standard": "6.0.8",
    "standard-format": "2.1.1"
  }
}
